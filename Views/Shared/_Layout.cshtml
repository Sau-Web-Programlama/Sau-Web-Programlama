@using Microsoft.AspNetCore.Http
@using SporSalonu2.Data
@inject ApplicationDbContext _context

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitZone</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* NAVBAR TASARIMI */
        .navbar-custom {
            background-color: rgba(30, 39, 46, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding: 10px 0;
            box-shadow: 0 4px 20px rgba(0,0,0,0.4);
            transition: all 0.3s ease;
        }

        /* LOGO */
        .brand-logo {
            font-size: 1.6rem;
            font-weight: 900;
            color: #fff !important;
            letter-spacing: 1px;
            text-transform: uppercase;
            text-decoration: none;
        }

        .brand-highlight {
            color: #e67e22;
        }

        /* LİNKLER */
        .nav-link-custom {
            color: #d2dae2 !important;
            font-weight: 600;
            font-size: 0.9rem;
            margin: 0 5px;
            position: relative;
            transition: color 0.3s;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            white-space: nowrap;
        }

            .nav-link-custom:hover {
                color: #00d2d3 !important;
            }

            .nav-link-custom::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -5px;
                left: 0;
                background-color: #00d2d3;
                transition: width 0.3s;
            }

            .nav-link-custom:hover::after {
                width: 100%;
            }

        /* KULLANICI ROZETİ */
        .user-badge {
            background-color: #353b48;
            padding: 6px 12px;
            border-radius: 30px;
            color: #fff;
            font-size: 0.8rem;
            display: flex;
            align-items: center;
            gap: 8px;
            border: 1px solid rgba(255,255,255,0.1);
            transition: background-color 0.2s;
            max-width: 180px;
        }

            .user-badge:hover {
                background-color: #2f3640;
                cursor: pointer;
                border-color: #00d2d3;
            }

        /* BUTONLAR */
        .btn-nav {
            padding: 6px 14px;
            border-radius: 8px;
            font-weight: 700;
            font-size: 0.8rem;
            text-decoration: none;
            transition: transform 0.2s, box-shadow 0.2s;
            white-space: nowrap;
            display: inline-block;
            line-height: 1.5;
            text-align: center;
            vertical-align: middle;
            border: 1px solid transparent;
        }

        .btn-nav-outline {
            border: 1px solid #00d2d3;
            color: #00d2d3;
            background: transparent;
        }

            .btn-nav-outline:hover {
                background: #00d2d3;
                color: #1e272e;
            }

        .btn-nav-filled {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            border: none;
        }

            .btn-nav-filled:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(231, 76, 60, 0.4);
                color: white;
            }

        .btn-admin {
            background: linear-gradient(135deg, #f1c40f, #f39c12);
            color: #2c3e50;
            border: none;
        }

            .btn-admin:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(241, 196, 15, 0.4);
                color: #2c3e50;
            }

        body {
            padding-top: 80px;
            background-color: #1e272e;
            color: #d2dae2;
        }

        /* Footer Link Hover Efekti */
        .footer-link:hover {
            color: #fff !important;
            text-decoration: underline !important;
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">

            <div class="container-fluid px-3 px-lg-5">

                <a class="navbar-brand brand-logo" asp-controller="Home" asp-action="Index">
                    FIT<span class="brand-highlight">ZONE</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="Services" asp-action="Index">Hizmetler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="Trainers" asp-action="Index">Antrenörler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="Booking" asp-action="Index">Randevu Al</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-controller="AI" asp-action="DietAssistant">
                                <i class="fas fa-robot me-1 text-info"></i> YZ Asistan
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2 mt-3 mt-lg-0 flex-wrap justify-content-center">

                        @if (User.Identity.IsAuthenticated)
                        {
                            string displayName = User.Identity.Name;
                            try
                            {
                                var currentUser = _context.Users.FirstOrDefault(u => u.Email == User.Identity.Name);
                                if (currentUser != null)
                                {
                                    // Eğer isim çok uzunsa sadece ilk ismini alalım ki yer kaplamasın
                                    displayName = $"{currentUser.FirstName} {currentUser.LastName}";
                                }
                            }
                            catch { }

                            <a asp-controller="Account" asp-action="Profile" class="text-decoration-none" title="Profilim">
                                <div class="user-badge d-none d-xl-flex">
                                    <i class="fas fa-user-circle text-warning fs-5"></i>
                                    <span class="text-truncate" style="max-width: 120px;">
                                        @displayName
                                    </span>
                                </div>
                                <div class="btn-nav btn-nav-outline d-xl-none">
                                    <i class="fas fa-user"></i> Profil
                                </div>
                            </a>

                            <a asp-controller="Booking" asp-action="MyBookings" class="btn-nav btn-nav-outline">
                                Randevular
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Admin" asp-action="Index" class="btn-nav btn-admin">
                                    <i class="fas fa-shield-alt"></i> Panel
                                </a>
                            }

                            <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                                <button type="submit" class="btn-nav btn-nav-filled">Çıkış</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn-nav btn-nav-outline">Giriş</a>
                            <a asp-controller="Account" asp-action="Register" class="btn-nav btn-nav-filled">Kayıt Ol</a>
                        }

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content container py-5">
            <div class="row">
                <div class="col-md-3 footer-section mb-4">
                    <h4 class="text-white">FitZone Hakkında</h4>
                    <p class="small" style="color: #d2dae2;">Türkiye'nin en modern spor salonlarından biri olarak, sağlıklı yaşam yolculuğunuzda yanınızdayız.</p>
                </div>
                <div class="col-md-3 footer-section mb-4 d-flex flex-column">
                    <h4 class="text-white">Hızlı Linkler</h4>
                    <a asp-controller="Services" asp-action="Index" class="text-decoration-none mb-1 small footer-link" style="color: #d2dae2;">Hizmetler</a>
                    <a asp-controller="Trainers" asp-action="Index" class="text-decoration-none mb-1 small footer-link" style="color: #d2dae2;">Antrenörler</a>
                    <a asp-controller="Booking" asp-action="Index" class="text-decoration-none mb-1 small footer-link" style="color: #d2dae2;">Randevu Al</a>
                    <a asp-controller="AI" asp-action="DietAssistant" class="text-decoration-none small footer-link" style="color: #d2dae2;">YZ Asistan</a>
                </div>
                <div class="col-md-3 footer-section mb-4">
                    <h4 class="text-white">İletişim</h4>
                    <p class="mb-1 small" style="color: #d2dae2;">📍 Serdivan, Sakarya</p>
                    <p class="mb-1 small" style="color: #d2dae2;">📞 0264 295 60 60</p>
                    <p class="small" style="color: #d2dae2;">✉️ info@fitzone.com.tr</p>
                </div>
                <div class="col-md-3 footer-section mb-4">
                    <h4 class="text-white">Çalışma Saatleri</h4>
                    <p class="mb-1 small" style="color: #d2dae2;">Hafta İçi: 06:00 - 23:00</p>
                    <p class="small" style="color: #d2dae2;">Hafta Sonu: 08:00 - 22:00</p>
                </div>
            </div>
        </div>
        <div class="footer-bottom text-center py-3" style="border-top: 1px solid rgba(255,255,255,0.1);">
            <p class="mb-0 small" style="color: #d2dae2;">&copy; 2025 FitZone. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>