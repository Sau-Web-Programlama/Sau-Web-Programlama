@using Microsoft.AspNetCore.Http
@using SporSalonu2.Data
@inject ApplicationDbContext _context

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitZone</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/site.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <nav>
        <div class="container">
            <a asp-controller="Home" asp-action="Index" class="logo">
                FIT<span style="color: var(--accent-orange)">ZONE</span>
            </a>

            <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li><a asp-controller="Services" asp-action="Index">Hizmetler</a></li>
                <li><a asp-controller="Trainers" asp-action="Index">Antrenörler</a></li>
                <li><a asp-controller="Booking" asp-action="Index">Randevu Al</a></li>
                <li><a asp-controller="AI" asp-action="DietAssistant">YZ Diyet Asistanı</a></li>
            </ul>

            <div class="nav-actions" style="display: flex; align-items: center;">
                @if (User.Identity.IsAuthenticated)
                {
                    // --- İSİM ÇEKME İŞLEMİ (C# KODU) ---
                    string displayName = User.Identity.Name; // Varsayılan olarak emaili al

                    try
                    {
                        // Veritabanından bu emaile sahip kullanıcıyı bul
                        var currentUser = _context.Users.FirstOrDefault(u => u.Email == User.Identity.Name);
                        if (currentUser != null)
                        {
                            // Eğer kullanıcı bulunduysa ismini ve soyismini birleştir
                            displayName = $"{currentUser.FirstName} {currentUser.LastName}";
                        }
                    }
                    catch
                    {
                        // Bir hata olursa (tablo bulunamazsa vs.) email göstermeye devam et
                    }
                    // ------------------------------------

                    // --- İSİM GÖSTERME ALANI ---
                    <div style="color: white; margin-right: 15px; font-weight: 500; font-size: 0.9rem; display:flex; align-items:center;">
                        <i class="fas fa-user-circle" style="color: var(--accent-orange); margin-right: 8px; font-size: 1.2rem;"></i>
                        <span style="max-width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            @displayName
                        </span>
                    </div>
                    // ---------------------------

                    <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-outline" style="margin-right: 0.5rem;">
                        Randevularım
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline" style="margin-right: 0.5rem;">
                            Admin Panel
                        </a>
                    }

                    <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-primary">Çıkış Yap</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline">Giriş Yap</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Üye Ol</a>
                }
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>FitZone Hakkında</h4>
                <p>Türkiye'nin en modern spor salonlarından biri olarak, sağlıklı yaşam yolculuğunuzda yanınızdayız.</p>
            </div>
            <div class="footer-section">
                <h4>Hızlı Linkler</h4>
                <a asp-controller="Services" asp-action="Index">Hizmetler</a>
                <a asp-controller="Trainers" asp-action="Index">Antrenörler</a>
                <a asp-controller="Booking" asp-action="Index">Randevu Al</a>
                <a asp-controller="AI" asp-action="DietAssistant">YZ Diyet Asistanı</a>
            </div>
            <div class="footer-section">
                <h4>İletişim</h4>
                <p>📍 Serdivan, Sakarya</p>
                <p>📞 0264 295 60 60</p>
                <p>✉️ info@fitzone.com.tr</p>
            </div>
            <div class="footer-section">
                <h4>Çalışma Saatleri</h4>
                <p>Pazartesi - Cuma: 06:00 - 23:00</p>
                <p>Cumartesi - Pazar: 08:00 - 22:00</p>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; 2025 FitZone. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>