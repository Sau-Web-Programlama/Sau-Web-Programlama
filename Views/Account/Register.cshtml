@* Views/Account/Register.cshtml *@
@model FitnessCenter.Models.RegisterViewModel
@{
    ViewData["Title"] = "Üye Ol";
}

<div class="auth-container">
    <div class="auth-box">
        <h2>Üye Ol</h2>

        <form method="post" asp-controller="Account" asp-action="Register" id="registerForm">
            <div asp-validation-summary="ModelOnly" class="primary-text" style="color: red; margin-bottom: 1rem;"></div>

            <div class="form-group">
                <label asp-for="FirstName">Ad *</label>
                <input asp-for="FirstName" placeholder="Adınız" required />
                <span asp-validation-for="FirstName" class="primary-text" style="color: red; font-size: 0.85rem;"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Soyad *</label>
                <input asp-for="LastName" placeholder="Soyadınız" required />
                <span asp-validation-for="LastName" class="primary-text" style="color: red; font-size: 0.85rem;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">E-posta *</label>
                <input asp-for="Email" placeholder="ornek@sakarya.edu.tr" required />
                <span asp-validation-for="Email" class="primary-text" style="color: red; font-size: 0.85rem;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Telefon *</label>
                <input asp-for="Phone" placeholder="0555 555 55 55" required />
                <span asp-validation-for="Phone" class="primary-text" style="color: red; font-size: 0.85rem;"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Şifre *</label>
                <input asp-for="Password" placeholder="••••••••" required />
                <span asp-validation-for="Password" class="primary-text" style="color: red; font-size: 0.85rem;"></span>
                <small class="secondary-text">En az 6 karakter olmalıdır</small>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Şifre Tekrar *</label>
                <input asp-for="ConfirmPassword" placeholder="••••••••" required />
                <span asp-validation-for="ConfirmPassword" class="primary-text" style="color: red; font-size: 0.85rem;"></span>
            </div>

            <div class="form-group" style="display: flex; align-items: start; margin-bottom: 1rem;">
                <input type="checkbox" asp-for="AcceptTerms" required style="width: auto; margin-right: 0.5rem; margin-top: 0.3rem;" />
                <label asp-for="AcceptTerms" class="secondary-text" style="margin-bottom: 0; font-size: 0.9rem;">
                    <a href="#" class="primary-text">Kullanım Şartları</a> ve
                    <a href="#" class="primary-text">Gizlilik Politikası</a>'nı okudum, kabul ediyorum
                </label>
                <span asp-validation-for="AcceptTerms" class="primary-text" style="color: red; font-size: 0.85rem;"></span>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 1rem; font-size: 1.1rem;">
                Üye Ol
            </button>

            <p class="secondary-text" style="text-align: center; margin-top: 1.5rem;">
                Zaten hesabınız var mı?
                <a asp-controller="Account" asp-action="Login" class="primary-text">Giriş Yap</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Telefon numarası formatı
        document.getElementById('phone').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 11) value = value.slice(0, 11);
            e.target.value = value;
        });
    </script>
}