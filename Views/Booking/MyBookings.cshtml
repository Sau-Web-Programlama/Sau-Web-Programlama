@using SporSalonu2.Models
@model List<Booking>
@{
    ViewData["Title"] = "Randevularım";
}

<div class="container page-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0">📆 Randevularım</h2>
        <a asp-action="Index" class="btn btn-primary">➕ Yeni Randevu Al</a>
    </div>

    @* Bildirim Mesajları *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover align-middle custom-table">
            <thead>
                <tr>
                    <th>Hizmet (Branş)</th>
                    <th>Antrenör</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="fw-bold text-light">@item.Service.Name</span>
                            </td>
                            <td>@item.Trainer.FirstName @item.Trainer.LastName</td>
                            <td>@item.AppointmentDate.ToShortDateString()</td>
                            <td>
                                <span class="badge bg-secondary">@item.AppointmentTime</span>
                            </td>

                            @* Duruma Göre Renkli Rozetler *@
                            @{
                                string badgeClass = "bg-secondary";
                                string statusText = item.Status.ToString();

                                switch (item.Status)
                                {
                                    case BookingStatus.Approved:
                                        badgeClass = "bg-success";
                                        statusText = "Onaylandı";
                                        break;
                                    case BookingStatus.Pending:
                                        badgeClass = "bg-warning text-dark";
                                        statusText = "Onay Bekliyor";
                                        break;
                                    case BookingStatus.Rejected:
                                        badgeClass = "bg-danger";
                                        statusText = "Reddedildi";
                                        break;
                                    case BookingStatus.Cancelled:
                                        badgeClass = "bg-secondary";
                                        statusText = "İptal Edildi";
                                        break;
                                }
                            }

                            <td>
                                <span class="badge @badgeClass rounded-pill px-3">@statusText</span>
                            </td>

                            <td>
                                @* Sadece Bekleyen veya Onaylanan randevular iptal edilebilir *@
                                @if (item.Status == BookingStatus.Pending || item.Status == BookingStatus.Approved)
                                {
                                    <form method="post" asp-controller="Booking" asp-action="Cancel" asp-route-id="@item.Id" onsubmit="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            🚫 İptal Et
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted small">---</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <h4 class="text-muted">Henüz hiç randevunuz yok.</h4>
                            <p class="text-muted">Hemen yeni bir randevu alarak spora başlayın!</p>
                            <a asp-action="Index" class="btn btn-outline-primary mt-2">Randevu Al</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <style>
        /* Tablo Tasarımı (Dark Mode Uyumlu) */
        .custom-table {
            background-color: #2c3e50; /* Koyu arka plan */
            color: #ecf0f1;
            border-radius: 8px;
            overflow: hidden;
        }

            .custom-table thead {
                background-color: #34495e;
                border-bottom: 2px solid #4a5568;
            }

            .custom-table th {
                color: #bdc3c7;
                font-weight: 600;
                padding: 15px;
                border: none;
            }

            .custom-table td {
                padding: 15px;
                border-bottom: 1px solid #4a5568;
                color: #ecf0f1;
            }

            .custom-table tbody tr:hover {
                background-color: #3e5871; /* Hover rengi */
            }

        /* Butonlar */
        .btn-outline-danger {
            color: #e74c3c;
            border-color: #e74c3c;
        }

            .btn-outline-danger:hover {
                background-color: #e74c3c;
                color: white;
            }
    </style>
}