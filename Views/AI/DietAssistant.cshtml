@model SporSalonu2.Models.AIDietViewModel

<div class="ai-wrapper">
    <h1 class="ai-title">🧠 Yapay Zekâ Diyet Asistanı</h1>

    <div class="ai-card">
        <form method="post" asp-action="GenerateDiet">
            <div asp-validation-summary="ModelOnly" class="ai-error"></div>

            <label>Yaş</label>
            <input asp-for="Age" type="number" class="ai-input" />

            <label>Boy (cm)</label>
            <input asp-for="HeightCm" type="number" class="ai-input" />

            <label>Kilo (kg)</label>
            <input asp-for="WeightKg" type="number" class="ai-input" />

            <label>Hedef</label>
            <select asp-for="Goal" class="ai-input">
                <option value="">Seçiniz...</option>
                <option>Kilo Verme</option>
                <option>Kas Geliştirme</option>
                <option>Kilo Koruma</option>
            </select>

            <button class="ai-btn">DİYET PLANI OLUŞTUR</button>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.DietPlanResult))
    {
        <div class="ai-result">
            <h3>✨ Yapay Zekâ Sonucu</h3>
            @Html.Raw(
            Model.DietPlanResult
            .Replace("\n", "")
            .Replace("\r", "")
            .Replace("<br>", "")
            .Replace("<br/>", "")
            .Replace("<p>", "")
            .Replace("</p>", "")
                )
        </div>
    }
</div>
