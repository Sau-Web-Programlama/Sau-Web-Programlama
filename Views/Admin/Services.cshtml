@* Views/Admin/Services.cshtml *@
@using SporSalonu2.Models
@model List<Service>
@{
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div class="container page-container">
    <h2 class="section-title">💪 Hizmet Yönetimi</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div style="text-align: right; margin-bottom: 1.5rem;">
        <a asp-controller="Admin" asp-action="CreateService" class="btn btn-primary">➕ Yeni Hizmet Ekle</a>
    </div>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Hizmet Adı</th>
                <th>Süre (dk)</th>
                <th>Fiyat (TL)</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.DurationMinutes</td>
                        <td>@service.Price.ToString("C2")</td> @* Para birimi formatında gösterim *@
                        <td>@(service.Description.Length > 50 ? service.Description.Substring(0, 50) + "..." : service.Description)</td>
                        <td>
                            <a asp-controller="Admin" asp-action="EditService" asp-route-id="@service.Id" class="btn btn-outline" style="padding: 0.3rem 0.8rem;">Düzenle</a>
                            <a asp-controller="Admin" asp-action="DeleteService" asp-route-id="@service.Id" class="btn btn-danger" style="padding: 0.3rem 0.8rem; background-color: darkred; color: white;">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="text-align: center;">Kayıtlı hizmet bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>
</div>