@using SporSalonu2.Models
@model List<SporSalonu2.Models.User>

@{
    ViewData["Title"] = "Üye Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Koyu Tema Kart */
    .custom-table-card {
        background-color: #1e272e;
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        overflow: hidden; /* Köşelerin yuvarlak kalması için */
    }

    /* Tablo Genel Ayarları */
    .table-dark-custom {
        width: 100%; /* Tabloyu zorla genişlet */
        table-layout: fixed; /* Sütun genişliklerini sabitle */
        background-color: #1e272e;
        color: #d2dae2;
        margin-bottom: 0;
    }

        /* Tablo Başlıkları */
        .table-dark-custom thead th {
            background-color: #2f3640;
            color: #f5f6fa;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            padding: 18px 15px; /* Biraz daha geniş boşluk */
            border-bottom: 2px solid #353b48;
            vertical-align: middle;
        }

        /* Tablo Satırları */
        .table-dark-custom tbody td {
            background-color: #1e272e;
            color: #d2dae2;
            border-bottom: 1px solid #353b48;
            padding: 15px;
            vertical-align: middle;
            font-size: 0.95rem;
            word-wrap: break-word; /* Uzun mailler taşmasın diye */
        }

    /* Hover Efekti */
    .table-hover tbody tr:hover td {
        background-color: #2c3e50;
        color: #fff;
        transition: background-color 0.2s ease-in-out;
    }

    /* Buton Tasarımları */
    .btn-custom {
        border-radius: 8px;
        padding: 6px 14px;
        font-weight: 600;
        font-size: 0.8rem;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s;
        text-decoration: none;
        text-transform: uppercase;
    }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        }

    .btn-edit {
        background-color: #f1c40f !important;
        color: #2c3e50 !important;
    }

        .btn-edit:hover {
            background-color: #f39c12 !important;
        }

    .btn-delete {
        background-color: #e74c3c !important;
        color: #fff !important;
    }

        .btn-delete:hover {
            background-color: #c0392b !important;
        }

    /* Rozet (Role) */
    .role-badge {
        background-color: #353b48;
        color: #00d2d3;
        padding: 5px 10px;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

</style>

<div class="container" style="margin-top: 120px; margin-bottom: 50px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-white fw-bold mb-0">👥 Üye Yönetimi</h2>
            <p class="text-muted mb-0">Sisteme kayıtlı sporcuları buradan yönetebilirsiniz.</p>
        </div>
        <div class="bg-primary text-white rounded-pill px-4 py-2 fw-bold shadow">
            Toplam: @(Model != null ? Model.Count() : 0)
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
        </div>
    }

    <div class="card custom-table-card">
        <div class="table-responsive">
            <table class="table table-dark-custom table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width: 25%;">Ad Soyad</th>
                        <th style="width: 30%;">E-posta</th>
                        <th style="width: 10%;">Rol</th>
                        <th style="width: 15%;">Telefon</th>
                        <th style="width: 20%;" class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var member in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div style="width: 35px; height: 35px; background-color: #485460; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 10px; color: #fff; font-weight: bold;">
                                            @(string.IsNullOrEmpty(member.FirstName) ? "?" : member.FirstName.Substring(0, 1).ToUpper())
                                        </div>
                                        <span class="fw-bold text-white">@member.FirstName @member.LastName</span>
                                    </div>
                                </td>

                                <td>@member.Email</td>

                                <td>
                                    <span class="role-badge">@member.Role</span>
                                </td>

                                <td>
                                    @(string.IsNullOrEmpty(member.Phone) ? "-" : member.Phone)
                                </td>

                                <td class="text-end">
                                    <div class="d-flex gap-2 justify-content-end">
                                        <a asp-action="EditMember" asp-route-id="@member.Id" class="btn btn-custom btn-edit shadow-sm">
                                            <i class="fas fa-pen"></i> <span class="d-none d-md-inline">Düzenle</span>
                                        </a>

                                        <form asp-action="DeleteMember" method="post" style="display:inline;" onsubmit="return confirm('Bu üyeyi silmek istediğinize emin misiniz?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@member.Id" />
                                            <button type="submit" class="btn btn-custom btn-delete shadow-sm">
                                                <i class="fas fa-trash"></i> <span class="d-none d-md-inline">Sil</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <div class="fs-1 mb-3">📭</div>
                                <h5>Henüz kayıtlı üye bulunmamaktadır.</h5>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>