@using SporSalonu2.Models
@model List<User>
@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container page-container">
    <h2 class="section-title">👥 Üye Yönetimi</h2>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>E-posta</th>
                <th>Rol</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.FirstName @member.LastName</td>
                        <td>@member.Email</td>
                        <td>
                            <span class="badge bg-info text-dark">@member.Role</span>
                        </td>
                        <td>
                            <a href="#" class="btn btn-outline" style="padding: 0.3rem 0.8rem;">Detay</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" style="text-align: center;">Henüz kayıtlı üye bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>
</div>