@* Views/Admin/CreateService.cshtml *@
@model SporSalonu2.Models.ServiceViewModel
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="auth-container">
    <div class="auth-box" style="max-width: 600px;">
        <h2>➕ Yeni Hizmet Ekle</h2>

        <form method="post" asp-controller="Admin" asp-action="CreateService">
            <div asp-validation-summary="ModelOnly" style="color: red; margin-bottom: 1rem;"></div>

            <div class="form-group">
                <label asp-for="Name">Hizmet Adı *</label>
                <input asp-for="Name" placeholder="Örn: Kişisel Antrenman" required />
            </div>

            <div class="form-group">
                <label asp-for="DurationMinutes">Süre (Dakika) *</label>
                <input asp-for="DurationMinutes" type="number" required />
            </div>

            <div class="form-group">
                <label asp-for="Price">Fiyat (TL) *</label>
                <input asp-for="Price" type="number" step="0.01" required />
            </div>

            <div class="form-group">
                <label asp-for="Description">Açıklama</label>
                <textarea asp-for="Description" rows="4" placeholder="Hizmetin kısa açıklaması ve detayları..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 1rem;">
                Hizmeti Kaydet
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}