@model IEnumerable<SporSalonu2.Models.Booking>

@{
    ViewData["Title"] = "Randevu Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-table-card {
        background-color: #1e272e;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .table-dark-custom {
        background-color: #1e272e;
        color: #d2dae2;
        margin-bottom: 0;
    }

        .table-dark-custom thead th {
            background-color: #2f3640;
            color: #f5f6fa;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            padding: 15px;
        }

        .table-dark-custom tbody td {
            border-bottom: 1px solid #353b48;
            padding: 15px;
            vertical-align: middle;
        }

    .text-member {
        color: #00d2d3;
        font-weight: 500;
    }

    .text-trainer {
        color: #ff9f43;
        font-weight: bold;
    }

    .text-branch {
        color: #c8d6e5;
        font-size: 0.9rem;
    }

    .text-date {
        font-weight: bold;
        color: #fff;
    }

    .text-time {
        color: #8395a7;
        font-size: 0.85rem;
    }
</style>

<div class="container" style="margin-top: 120px; margin-bottom: 50px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-white fw-bold mb-0">📅 Randevu Yönetimi</h2>
        </div>
        <div class="bg-primary text-white rounded-pill px-4 py-2 fw-bold shadow">
            Toplam: @Model.Count()
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-3">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm rounded-3">
            @TempData["Error"]
        </div>
    }

    <div class="card custom-table-card">
        <div class="table-responsive">
            <table class="table table-dark-custom table-hover align-middle">
                <thead>
                    <tr>
                        <th class="text-center">#ID</th>
                        <th>Üye Bilgisi</th>
                        <th>Antrenör & Branş</th>
                        <th>Tarih / Saat</th>
                        <th class="text-center">Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <h5>Henüz hiç randevu talebi yok.</h5>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center text-muted">#@item.Id</td>
                                <td>
                                    <span class="text-member">@item.MemberId</span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="text-trainer">@item.Trainer?.FirstName @item.Trainer?.LastName</span>
                                        <span class="text-branch">@item.Service?.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-date">@item.AppointmentDate.ToString("dd.MM.yyyy")</span> <br />
                                    <span class="text-time">⏰ @item.AppointmentTime</span>
                                </td>
                                <td class="text-center">
                                    @if (item.Status == SporSalonu2.Models.BookingStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Bekliyor</span>
                                    }
                                    else if (item.Status == SporSalonu2.Models.BookingStatus.Approved)
                                    {
                                        <span class="badge bg-success">Onaylandı</span>
                                    }
                                    else if (item.Status == SporSalonu2.Models.BookingStatus.Rejected)
                                    {
                                        <span class="badge bg-danger">Reddedildi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">İptal</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (item.Status == SporSalonu2.Models.BookingStatus.Pending)
                                    {
                                        <div class="d-flex gap-2 justify-content-end">
                                            <form asp-action="ApproveBooking" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-success">Onayla</button>
                                            </form>
                                            <form asp-action="RejectBooking" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger">Reddet</button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Tamamlandı</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>