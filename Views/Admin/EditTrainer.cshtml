@* Views/Admin/EditTrainer.cshtml *@
@model SporSalonu2.Models.TrainerViewModel
@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<div class="auth-container">
    <div class="auth-box" style="max-width: 600px;">
        <h2>✏️ Antrenör Düzenle (#@ViewBag.TrainerId)</h2>

        @* Form, veriyi POST olarak AdminController'daki EditTrainer Action'ına gönderir *@
        <form method="post" asp-controller="Admin" asp-action="EditTrainer" asp-route-id="@ViewBag.TrainerId">

            @* ID'yi taşımak için gizli alan (Controller action'ı id parametresini alıyor) *@
            <input type="hidden" name="Id" value="@ViewBag.TrainerId" />

            <div asp-validation-summary="ModelOnly" style="color: red; margin-bottom: 1rem;"></div>

            <div class="form-group">
                <label asp-for="FirstName">Ad *</label>
                <input asp-for="FirstName" required />
            </div>

            <div class="form-group">
                <label asp-for="LastName">Soyad *</label>
                <input asp-for="LastName" required />
            </div>

            <div class="form-group">
                <label asp-for="Specialty">Uzmanlık Alanı *</label>
                <input asp-for="Specialty" required />
            </div>

            <div class="form-group">
                <label asp-for="Email">E-posta</label>
                <input asp-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="Phone">Telefon</label>
                <input asp-for="Phone" />
            </div>

            <div class="form-group">
                <label asp-for="Bio">Biyografi (Kısa Açıklama)</label>
                <textarea asp-for="Bio" rows="4"></textarea>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 1rem;">
                Değişiklikleri Kaydet
            </button>

            <div style="text-align: center; margin-top: 1rem;">
                <a asp-controller="Admin" asp-action="Trainers" class="primary-text">Antrenör Listesine Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}