@model IEnumerable<SporSalonu2.Models.Trainer>

@{
    ViewData["Title"] = "Antrenör Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Koyu Tema Kart */
    .custom-table-card {
        background-color: #1e272e;
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    /* Tablo Genel Ayarları */
    .table-dark-custom {
        width: 100%;
        table-layout: fixed; /* Sütun genişliklerini sabitle */
        background-color: #1e272e;
        color: #d2dae2;
        margin-bottom: 0;
    }

        /* Tablo Başlıkları */
        .table-dark-custom thead th {
            background-color: #2f3640;
            color: #f5f6fa;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            padding: 18px 15px;
            border-bottom: 2px solid #353b48;
            vertical-align: middle;
        }

        /* Tablo Satırları */
        .table-dark-custom tbody td {
            background-color: #1e272e;
            color: #d2dae2;
            border-bottom: 1px solid #353b48;
            padding: 15px;
            vertical-align: middle;
            font-size: 0.9rem;
            word-wrap: break-word;
        }

    /* Hover Efekti */
    .table-hover tbody tr:hover td {
        background-color: #2c3e50;
        color: #fff;
        transition: background-color 0.2s ease-in-out;
    }

    /* Avatar Yuvarlağı */
    .avatar-circle {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #0984e3, #74b9ff); /* Mavi tonları */
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 1.2rem;
        box-shadow: 0 3px 6px rgba(0,0,0,0.2);
    }

    /* Uzmanlık Alanları Yazısı */
    .specialty-text {
        color: #00d2d3; /* Turkuaz */
        font-weight: 500;
        font-size: 0.85rem;
    }

    /* İletişim Bilgileri */
    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 5px;
        font-size: 0.85rem;
    }

    .contact-row {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .contact-icon {
        color: #b2bec3;
        width: 16px;
        text-align: center;
    }

    /* Buton Tasarımları */
    .btn-custom {
        border-radius: 8px;
        padding: 6px 14px;
        font-weight: 600;
        font-size: 0.8rem;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s;
        text-decoration: none;
        text-transform: uppercase;
    }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        }

    .btn-edit {
        background-color: #f1c40f !important;
        color: #2c3e50 !important;
    }

        .btn-edit:hover {
            background-color: #f39c12 !important;
        }

    .btn-delete {
        background-color: #e74c3c !important;
        color: #fff !important;
    }

        .btn-delete:hover {
            background-color: #c0392b !important;
        }

    .btn-add-new {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        color: white;
        padding: 10px 20px;
        border-radius: 30px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 4px 15px rgba(46, 204, 113, 0.3);
        transition: transform 0.2s;
    }

        .btn-add-new:hover {
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 6px 20px rgba(46, 204, 113, 0.5);
        }

</style>

<div class="container" style="margin-top: 120px; margin-bottom: 50px;">

    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="text-white fw-bold mb-1">🏋️‍♂️ Antrenör Yönetimi</h2>
            <p class="text-muted mb-0">Eğitmen kadrosunu buradan düzenleyebilirsiniz.</p>
        </div>
        <div>
            <a asp-action="CreateTrainer" class="btn-add-new">
                <i class="fas fa-plus me-2"></i> YENİ ANTRENÖR EKLE
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
        </div>
    }

    <div class="card custom-table-card">
        <div class="table-responsive">
            <table class="table table-dark-custom table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width: 8%; text-align: center;">Avatar</th>
                        <th style="width: 20%;">Ad Soyad</th>
                        <th style="width: 32%;">Uzmanlık Alanları</th>
                        <th style="width: 25%;">İletişim</th>
                        <th style="width: 15%;" class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">
                                    <div class="avatar-circle">
                                        @(string.IsNullOrEmpty(item.FirstName) ? "?" : item.FirstName.Substring(0, 1).ToUpper())
                                    </div>
                                </td>

                                <td>
                                    <span class="fw-bold text-white fs-6">@item.FirstName @item.LastName</span>
                                </td>

                                <td>
                                    <span class="specialty-text">
                                        @(string.IsNullOrEmpty(item.Specialty) ? "-" : item.Specialty)
                                    </span>
                                </td>

                                <td>
                                    <div class="contact-info">
                                        <div class="contact-row">
                                            <i class="fas fa-phone contact-icon"></i>
                                            <span>@(string.IsNullOrEmpty(item.Phone) ? "-" : item.Phone)</span>
                                        </div>
                                        <div class="contact-row">
                                            <i class="fas fa-envelope contact-icon"></i>
                                            <span class="text-muted">@item.Email</span>
                                        </div>
                                    </div>
                                </td>

                                <td class="text-end">
                                    <div class="d-flex gap-2 justify-content-end">

                                        <a asp-action="EditTrainer" asp-route-id="@item.Id" class="btn btn-custom btn-edit shadow-sm">
                                            <i class="fas fa-pen"></i> <span class="d-none d-lg-inline">Düzenle</span>
                                        </a>

                                        <form asp-action="DeleteTrainer" method="post" style="display:inline;" onsubmit="return confirm('Bu antrenörü silmek istediğinize emin misiniz?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-custom btn-delete shadow-sm">
                                                <i class="fas fa-trash"></i> <span class="d-none d-lg-inline">Sil</span>
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <div class="fs-1 mb-3">📭</div>
                                <h5>Henüz kayıtlı antrenör bulunmamaktadır.</h5>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>