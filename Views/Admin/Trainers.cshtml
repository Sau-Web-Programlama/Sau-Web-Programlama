@* Views/Admin/Trainers.cshtml *@
@using SporSalonu2.Models
@model List<Trainer>
@{
    ViewData["Title"] = "Antrenör Yönetimi";
    Layout = "_AdminLayout"; // Admin layout'unuzun adını buraya girin
}

<div class="container page-container">
    <h2 class="section-title">🏋️ Antrenör Yönetimi</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <div style="text-align: right; margin-bottom: 1.5rem;">
        <a asp-controller="Admin" asp-action="CreateTrainer" class="btn btn-primary">➕ Yeni Antrenör Ekle</a>
    </div>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Uzmanlık</th>
                <th>E-posta</th>
                <th>Telefon</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var trainer in Model)
                {
                    <tr>
                        <td>@trainer.FirstName @trainer.LastName</td>
                        <td>@trainer.Specialty</td>
                        <td>@trainer.Email</td>
                        <td>@trainer.Phone</td>
                        <td>
                            <a asp-controller="Admin" asp-action="EditTrainer" asp-route-id="@trainer.Id" class="btn btn-outline" style="padding: 0.3rem 0.8rem;">Düzenle</a>
                            <a asp-controller="Admin" asp-action="DeleteTrainer" asp-route-id="@trainer.Id" class="btn btn-danger" style="padding: 0.3rem 0.8rem; background-color: darkred; color: white;">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="text-align: center;">Henüz kayıtlı antrenör bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>
</div>